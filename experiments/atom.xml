---
category: ideas
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name }}</title>
  <subtitle>{{ site.tagline }}</subtitle>
  <link href="http://{{ site.domain }}/{{ page.category }}/atom.xml" rel="self"/>
  <link href="http://{{ site.domain }}/{{ page.category }}"/>
  {% if site.categories[page.category].size > 0 %}
  <updated>{{ site.categories[page.category].first.date | date_to_xmlschema }}</updated>
  {% else %}
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  {% endif %}
  <id>http://{{ site.domain }}/{{ page.category}}</id>
  <author>
    <name>{{ site.author }}</name>
    <email>{{ site.email }}</email>
  </author>
  {% for post in site.categories[page.category] limit:10 %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="http://{{ site.domain }}{{ post.url }}"/>
    <id>http://{{ site.domain }}{{ post.id }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <content type="html">{{ post.excerpt | xml_escape }}</content>
    <author>
      <name>{{ site.author }}</name>
      <uri>http://{{ site.domain }}/about</uri>
    </author>
  </entry>
  {% endfor %}
</feed>
